rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public Site Settings
    match /settings/{setting} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Products are public for all users (read-only for guests)
    match /products/{product} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Categories are public for all users
    match /categories/{category} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Default secure rules for user data and orders
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
